{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "Aardvark.Build/Aardvark.Build.fsproj",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "build-test",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "build",
                "Test/Test.fsproj",
                "--no-dependencies",
                // Ask dotnet build to generate full paths for file names.
                "/property:GenerateFullPaths=true",
                // Do not generate summary otherwise it leads to duplicate errors in Problems panel
                "/consoleloggerparameters:NoSummary"
            ],
            "dependsOn": [
                "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "pack-test",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "pack",
                "Test/Test/Test.fsproj",
                "-o",
                "${workspaceFolder}/bin",
            ],
            "dependsOn": [
                "build"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": "$msCompile"
        },
        {
            "label": "install",
            "command": "dotnet",
            "type": "shell",
            "args": [
                "paket",
                "install"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always"
            }
        }
    ]
}